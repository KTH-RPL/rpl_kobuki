<launch>
  <!-- <include ns="kobuki" file="$(find kobuki_node)/launch/minimal.launch" />  -->
  <!-- <include ns="kobuki" file="$(find kobuki_keyop)/launch/keyop.launch" />  -->
  <arg name="joy_config" default="Log_F710" />
  <arg name="joy_dev" default="/dev/logitech_joy" />
  <arg name="config_filepath" default="$(find teleop_twist_joy)/config/$(arg joy_config).config.yaml" />
  <arg name="joy_topic" default="joy" />
  
  <node pkg="joy" type="joy_node" name="joy_node" output="screen">
    <param name="dev" value="$(arg joy_dev)" />
    <param name="deadzone" value="0.3" />
    <param name="autorepeat_rate" value="20" />
    <remap from="joy" to="$(arg joy_topic)" />
  </node>

  <node pkg="teleop_twist_joy" name="teleop_twist_joy" type="teleop_node" output="screen">
    <rosparam command="load" file="$(arg config_filepath)" />
    <remap from="joy" to="$(arg joy_topic)" />
  </node>
  
  <!-- <include ns="livox" file="$(find livox_ros_driver)/launch/livox_kobuki.launch" />  -->

</launch>
